<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    android:layout_height="match_parent"
    tools:context=".Battery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1.5"
        android:weightSum="10">

        <TextView
            android:id="@+id/txt_qr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:hint="Scan QR >>"
            android:background="@drawable/shadow"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textStyle="bold"/>


        <ImageButton
            android:id="@+id/btn_scan_qr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shadow"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/qr_scan"
            android:adjustViewBounds="true"
            android:padding="9dp"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#c0c0c0"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scanBatteryTextView"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_scan_qr2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:background="@drawable/shadow"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/qr_scan"
            android:adjustViewBounds="true"
            android:padding="9dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <TextView
        android:id="@+id/battery_qr"
        android:layout_width="584dp"
        android:layout_height="67dp"
        android:layout_margin="10dp"
        android:background="@drawable/shadow"
        android:gravity="center"
        android:hint="@string/batteryQR"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView

        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/textResult"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtView"
        android:layout_width="129dp"
        android:layout_height="147dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="40dp"
        android:textStyle="bold"  />
</LinearLayout>